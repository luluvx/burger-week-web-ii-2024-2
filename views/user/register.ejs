<%- include('../../components/header.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-8 col-sm-10 col-xxl-4">
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">Formulario de user</h5>
                        <form method="post" action="">
                            <% if (errors) { %>
                                <div class="alert alert-warning">
                                    <%= errors.message%>
                                </div>
                                <% } %>
                                    <div class="mt-2">
                                        <label>Name</label>
                                        <input required class="form-control" type="text" name="name"
                                            placeholder="Name" value="<%=user && user.name %>">
                                        <%if (errors?.name) {%>
                                            <div class="error-label">
                                                Por favor ingrese un nombre
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="mt-2">
                                        <label>Last name</label>
                                        <input required class="form-control" type="text" name="last_name"
                                            placeholder="Last name" value="<%=user && user.last_name %>">
                                        <%if (errors?.last_name) {%>
                                            <div class="error-label">
                                                Por favor ingrese un apellido
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="mt-2">
                                        <label>Email</label>
                                        <input required class="form-control" type="email" name="email"
                                            placeholder="Email" value="<%=user && user.email %>">
                                        <%if (errors?.email) {%>
                                            <div class="error-label">
                                                Por favor ingrese un Email
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="mt-2">
                                        <label>Password</label>
                                        <input required class="form-control" type="password" name="password"
                                            placeholder="Password" value="<%=user && user.password %>">
                                        <%if (errors?.password) {%>
                                            <div class="error-label">
                                                Por favor ingrese un contrase√±a
                                            </div>
                                            <% } %>
                                    </div>
                                    
                                    <div class="mt-2">
                                        <input class="btn btn-primary" type="submit" value="Enviar">
                                    </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../components/footer.ejs') %>