<%- include('../../components/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h3 class="mt-3">Lista de Restaurants</h3>
        </div>
    </div>
    <div class="row">
        <% restaurants.forEach(restaurant => { %>
            <div class="col-lg-4 col-md-6 col-sm-12 mt-3">
                <div class="card shadow-sm" onclick="window.location.href='/burgers/restaurant/<%= restaurant.id %>'">
                    <img class="card-img-top" src="<%= restaurant.imageURL || 'default-image.jpg' %>" alt="Imagen de <%= restaurant.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= restaurant.name %></h5>
                        <p class="card-text"><%= restaurant.description %></p>
                        <p class="card-text"><strong>Dirección:</strong> <%= restaurant.direction %></p>
                        <p class="card-text"><strong>Teléfono:</strong> <%= restaurant.phone %></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('../../components/footer.ejs') %>
