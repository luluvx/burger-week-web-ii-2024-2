<%- include('../../components/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h3 class="mt-3">Lista de Restaurants</h3>
            <a href="/restaurants/create" class="btn btn-primary">Crear Restaurant</a>
        </div>
    </div>
    <div class="row">
        <!-- Iterar sobre los restaurantes para crear una tarjeta para cada uno -->
        <% restaurants.forEach(restaurant => { %>
            <div class="col-lg-4 col-md-6 col-sm-12 mt-3">
                <div class="card shadow-sm" onclick="window.location.href='/burgers/restaurant/<%= restaurant.id %>'">
                    <div class="card-body">
                        <h5 class="card-title"><%= restaurant.name %></h5>
                        <p class="card-text"><%= restaurant.description %></p>
                        <p class="card-text"><strong>Dirección:</strong> <%= restaurant.direction %></p>
                        <p class="card-text"><strong>Teléfono:</strong> <%= restaurant.phone %></p>

                        <div class="d-flex justify-content-between">
                            <a href="/restaurants/<%= restaurant.id %>/edit" class="btn btn-primary">Editar</a>
                            <form method="post" action="/restaurants/<%= restaurant.id %>/delete"
                                onsubmit="return confirm('Está seguro que desea eliminar?')">
                                <input class="btn btn-danger" type="submit" value="Eliminar">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('../../components/footer.ejs') %>
