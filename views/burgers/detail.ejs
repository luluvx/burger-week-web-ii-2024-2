<%- include('../../components/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h3 class="mt-3">Detalles de la Hamburguesa</h3>
            <div class="card shadow-sm">
                <img class="card-img-top" src="/images/burgers/<%= burger.id %>.jpg" alt="Imagen de <%= burger.name %>">
                <div class="card-body">
                    <h5 class="card-title"><%= burger.name %></h5>
                    <p class="card-text"><%= burger.description %></p>
                    <p class="card-text"><strong>Precio:</strong> $<%= burger.price %></p>
                    <p class="card-text"><strong>Restaurante ID:</strong> <%= burger.restaurant_id %></p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <h4>Reseñas</h4>
 
            <% if (reviews.length > 0) { %>
                <% reviews.forEach(review => { %>
                    <div class="card mt-3">
                        <div class="card-body">
                            <h5 class="card-title">Reseña de <%= review.user.name %></h5>
                            <p class="card-text"><%= review.review %></p>
                            <p class="card-text"><strong>Calificación:</strong> <%= review.qualification %> / 5</p>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No hay reseñas aún para esta hamburguesa.</p>
            <% } %>
        </div>
    </div>

    <% if (message) { %>
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-warning">
                    <%= message %>
                </div>
            </div>
        </div>
    <% } %>

    <div class="row mt-4">
        <div class="col-12">
            <form action="/burgers/<%= burger.id %>/mark-eaten" method="POST">
                <button type="submit" class="btn btn-primary">
                    Marcar como comida
                </button>
            </form>
        </div>
    </div>
</div>

<%- include('../../components/footer.ejs') %>
