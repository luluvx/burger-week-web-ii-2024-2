<%- include('../../components/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-10 col-xxl-4">
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Formulario de Hamburguesas</h5>
                    <form class="needs-validation" method="post" action="">
                        <% if (errors) { %>
                            <div class="alert alert-warning">
                                <%= errors.message %>
                            </div>
                        <% } %>

                        <!-- Nombre -->
                        <div class="mt-2 has-validation">
                            <label>Nombre</label>
                            <input required class="form-control" type="text" name="name"
                                placeholder="Nombre de la hamburguesa" value="<%= burger && burger.name %>">
                            <% if (errors?.name) { %>
                                <div class="error-label">
                                    Por favor ingrese un nombre
                                </div>
                            <% } %>
                        </div>

                        <!-- Descripción -->
                        <div class="mt-2">
                            <label>Descripción</label>
                            <input required class="form-control" type="text" name="description"
                                placeholder="Descripción" value="<%= burger && burger.description %>">
                            <% if (errors?.description) { %>
                                <div class="error-label">
                                    Por favor ingrese una descripción
                                </div>
                            <% } %>
                        </div>

                        <!-- Precio -->
                        <div class="mt-2">
                            <label>Precio</label>
                            <input required class="form-control" type="number" name="price"
                                placeholder="Precio" value="<%= burger && burger.price %>">
                            <% if (errors?.price) { %>
                                <div class="error-label">
                                    Por favor ingrese un precio válido
                                </div>
                            <% } %>
                        </div>
                        <!-- Botón Enviar -->
                        <div class="mt-3">
                            <input class="btn btn-primary" type="submit" value="Enviar">
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../components/footer.ejs') %>
