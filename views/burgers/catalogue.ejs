<%- include('../../components/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h3 class="mt-3">Lista de Hamburguesas</h3>
            <!-- No incluimos el botón de "Crear Hamburguesa" ya que los clientes no deberían poder crear hamburguesas -->
        </div>
    </div>
    <div class="row">
        <!-- Iterar sobre las hamburguesas para crear una tarjeta para cada una -->
        <% burgers.forEach(burger => { %>
            <div class="col-lg-4 col-md-6 col-sm-12 mt-3">
                <div class="card shadow-sm" style="cursor: pointer;" onclick="window.location.href='/burgers/<%= burger.id %>/detail'">
                    <img class="card-img-top" src="/images/burgers/<%=burger.id %>.jpg" alt="Imagen de <%= burger.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= burger.name %></h5>
                        <p class="card-text"><%= burger.description %></p>
                        <p class="card-text"><strong>Precio:</strong> $<%= burger.price %></p>
                        <p class="card-text"><strong>Restaurante ID:</strong> <%= burger.restaurant_id %></p>

                        <!-- No incluimos botones de Editar, Eliminar ni Subir Foto para los usuarios comunes -->
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('../../components/footer.ejs') %>
