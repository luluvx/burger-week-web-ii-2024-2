<%- include('../../components/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-10 col-xxl-4">
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Subir Imagen de Hamburguesa</h5>
                    <form method="post" action="/burgers/<%= burger.id %>/photo" enctype="multipart/form-data">
                        <% if (errors) { %>
                            <div class="alert alert-warning">
                                <%= errors.message %>
                            </div>
                        <% } %>

                        <!-- Campo para seleccionar la imagen -->
                        <div class="mt-2">
                            <label>Subir Imagen</label>
                            <input class="form-control" type="file" name="photo" accept="image/*">
                        </div>

                        <!-- BotÃ³n para subir -->
                        <div class="mt-3">
                            <input class="btn btn-primary" type="submit" value="Subir Imagen">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../components/footer.ejs') %>
