<%- include('../../components/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h3 class="mt-3">Lista de Hamburguesas</h3>
            <a href="/burgers/<%=restaurantId%>/create" class="btn btn-primary">Crear Hamburguesa</a>

        </div>
    </div>
    <div class="row">
        <!-- Iterar sobre las hamburguesas para crear una tarjeta para cada una -->
        <% burgers.forEach(burger => { %>
            <div class="col-lg-4 col-md-6 col-sm-12 mt-3">
                <div class="card shadow-sm" style="cursor: pointer;" onclick="window.location.href='/burgers/<%= burger.id %>'">
                    <img class="card-img-top" src="/images/burgers/<%=burger.id %>.jpg" alt="Imagen de <%= burger.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= burger.name %></h5>
                        <p class="card-text"><%= burger.description %></p>
                        <p class="card-text"><strong>Precio:</strong> $<%= burger.price %></p>
                        <p class="card-text"><strong>Restaurante ID:</strong> <%= burger.restaurant_id %></p>

                        <div class="d-flex justify-content-between">
                            <a href="/burgers/<%= burger.id %>/edit" class="btn btn-primary">Editar</a>
                            <form method="post" action="/burgers/<%= burger.id %>/delete">
                                <input class="btn btn-danger" type="submit" value="Eliminar">
                            </form>
                            
                            <a href="/burgers/<%= burger.id %>/photo" class="btn btn-primary">Subir foto</a>

                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('../../components/footer.ejs') %>
